<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayGameWithComputer"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gauravbhola.ripplepulsebackground.RipplePulseLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clipChildren="false"
            ripple:rippleColor="#3D66C7"
            ripple:rippleType="stroke"
            ripple:strokeWidth="2dp"
            ripple:startRadius="20dp"
            ripple:endRadius="100dp"
            ripple:duration="1000"
            android:id="@+id/layout_ripplepulseP">

            <soup.neumorphism.NeumorphImageView
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_person_play"
                app:layout_constraintStart_toStartOf="parent"
                />
        </com.gauravbhola.ripplepulsebackground.RipplePulseLayout>

            <com.gauravbhola.ripplepulsebackground.RipplePulseLayout
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clipChildren="false"
                ripple:rippleColor="#3D66C7"
                ripple:rippleType="stroke"
                ripple:strokeWidth="2dp"
                ripple:startRadius="20dp"
                ripple:endRadius="100dp"
                ripple:duration="1000"
                android:id="@+id/layout_ripplepulse">

                <soup.neumorphism.NeumorphImageView
                    style="@style/Widget.Neumorph.ImageButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_computer_black"
                    app:layout_constraintStart_toStartOf="parent"
                    />


            </com.gauravbhola.ripplepulsebackground.RipplePulseLayout>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/edittext_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_player_turn_text"
                    android:textSize="10sp"
                    android:textColor="#030304"
                    android:layout_centerInParent="true"
                    android:padding="10sp"
                    />
            </soup.neumorphism.NeumorphCardView>

        </RelativeLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <soup.neumorphism.NeumorphCardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/player1Win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 "
                        android:textSize="15sp"
                        android:textColor="#030304"
                        android:layout_centerInParent="true"
                        android:padding="10sp"
                        />
                </soup.neumorphism.NeumorphCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphCardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/dow1Win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 "
                        android:textSize="15sp"
                        android:textColor="#030304"
                        android:layout_centerInParent="true"
                        android:padding="10sp"
                        />
                </soup.neumorphism.NeumorphCardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphCardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/play2Win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 "
                        android:textSize="15sp"
                        android:textColor="#030304"
                        android:layout_centerInParent="true"
                        android:padding="10sp"
                        />
                </soup.neumorphism.NeumorphCardView>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <soup.neumorphism.NeumorphButton
                    android:id="@+id/restartmatch"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:textSize="8dp"
                    android:text="@string/restart_match_button_text"
                    android:onClick="newMatch"
                    android:maxLines="1"
                    app:drawableEndCompat="@drawable/ic_restore"
                    app:neumorph_shapeType="flat" />
            </LinearLayout>

        </LinearLayout>

        <soup.neumorphism.NeumorphCardView
            android:layout_below="@+id/lastLayout"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_shadowColorLight="@color/colorAccent"
            app:neumorph_shadowColorDark="@color/colorAccent"
            app:neumorph_inset="12dp"
            app:neumorph_insetStart="12dp"
            app:neumorph_insetEnd="12dp"
            app:neumorph_insetTop="12dp"
            app:neumorph_insetBottom="12dp"

            >
        <GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_gravity="center">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/a11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                app:neumorph_shapeType="pressed"
                android:textSize="70sp"
                android:onClick="playmove"
                android:gravity="center"/>

            <soup.neumorphism.NeumorphButton
                android:id="@+id/a12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=""
                app:neumorph_shapeType="pressed"
                android:textSize="70sp"
                android:onClick="playmove"
                android:gravity="center"/>
            <soup.neumorphism.NeumorphButton
                android:id="@+id/a13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:textSize="70sp"
                android:onClick="playmove"
                app:neumorph_shapeType="pressed"
                android:gravity="center" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/a21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:textSize="70sp"
                android:onClick="playmove"
                android:gravity="center"
                app:neumorph_shapeType="pressed" />
            <soup.neumorphism.NeumorphButton
                android:id="@+id/a22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:textSize="70sp"
                android:onClick="playmove"
                android:gravity="center"
                app:neumorph_shapeType="pressed" />
            <soup.neumorphism.NeumorphButton
                android:id="@+id/a23"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:textSize="70sp"
                android:onClick="playmove"
                android:gravity="center"
                app:neumorph_shapeType="pressed" />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/a31"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:textSize="70sp"
                android:onClick="playmove"
                android:gravity="center"
                app:neumorph_shapeType="pressed" />


            <soup.neumorphism.NeumorphButton
                android:id="@+id/a32"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:textSize="70sp"
                android:onClick="playmove"
                android:gravity="center"
                app:neumorph_shapeType="pressed" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/a33"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:textSize="70sp"
                android:gravity="center"
                android:onClick="playmove"
                app:neumorph_shapeType="pressed" />

        </GridLayout>
        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>

</ScrollView>